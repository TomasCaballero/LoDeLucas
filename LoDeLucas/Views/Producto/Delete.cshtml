@model LoDeLucas.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Estás seguro de que querés eliminar este producto?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Descuento)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Descuento)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="centeredContainer">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" />
        <a asp-action="Index" class="centeredText">Cancelar</a>
    </form>
</div>
