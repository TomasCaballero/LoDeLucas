@model IEnumerable<LoDeLucas.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<style>

    th,td{

        text-align:center;
    }

    .cant{text-align:end;}

</style>

<h1>Historial de compras</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Producto
            </th>
            <th>
                Cliente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                Fecha
            </th>
            <th>
                Envío a domicilio
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Producto.Nombre
            </td>
            <td>
                @item.Cliente.Email
            </td>
            <td class="cant">
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @(item.EnvioADomicilio? "Sí" : "No")
            </td>
             <td class="cant">
                $@(item.CalcularCosto())
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
